<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color1"
    tools:context=".KvadratActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:backgroundTint="@color/color3"
        app:title="@string/kvadrat" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:hint="@string/stranica_a"
        android:importantForAutofill="no"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:hint="@string/povrsina"
        android:importantForAutofill="no"
        android:textColorHint="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintBottom_toTopOf="@id/editTextNumber3" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:hint="@string/opseg"
        android:importantForAutofill="no"
        android:textColorHint="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber2"
        app:layout_constraintBottom_toTopOf="@id/editTextNumber4" />

    <EditText
        android:id="@+id/editTextNumber4"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:hint="@string/dijagonala"
        android:importantForAutofill="no"
        android:textColorHint="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber3"
        app:layout_constraintBottom_toTopOf="@id/editTextNumber5" />

    <EditText
        android:id="@+id/editTextNumber5"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/polumjer_upisane_kruznice"
        android:inputType="number|numberDecimal"
        android:importantForAutofill="no"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@id/editTextNumber6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber4" />

    <EditText
        android:id="@+id/editTextNumber6"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/polumjer_opisane_kruznice"
        android:inputType="number|numberDecimal"
        android:importantForAutofill="no"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber5" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/color4"
        android:text="@string/izracunaj" />

</androidx.constraintlayout.widget.ConstraintLayout>