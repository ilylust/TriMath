<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color1"
    tools:context=".PravokutniActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button11"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/info_btn"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/slovo_i"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:backgroundTint="@color/color3"
        app:title="@string/Pravo_kutni" />

    <EditText
        android:id="@+id/editTextNumber11"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:hint="@string/Stranica_A"
        android:importantForAutofill="no"
        android:textColor="@drawable/edtextcolor"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <EditText
        android:id="@+id/editTextNumber12"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/Stranica_B"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:textColor="@drawable/edtextcolor"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber11" />

    <EditText
        android:id="@+id/editTextNumber13"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/Stranica_C"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:textColor="@drawable/edtextcolor"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber12" />

    <EditText
        android:id="@+id/editTextNumber16"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/Kut_alpha"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:textColor="@drawable/edtextcolor"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@id/editTextNumber17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber13" />

    <EditText
        android:id="@+id/editTextNumber17"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/Kut_beta"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:textColor="@drawable/edtextcolor"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@id/editTextNumber18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber16" />

    <EditText
        android:id="@+id/editTextNumber18"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/Povrsina"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:textColor="@drawable/edtextcolor"
        android:textColorHint="@color/color4"
        app:layout_constraintBottom_toTopOf="@id/editTextNumber19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber17" />

    <EditText
        android:id="@+id/editTextNumber19"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/Opseg"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:textColor="@drawable/edtextcolor"
        android:textColorHint="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber18"
        app:layout_constraintBottom_toTopOf="@id/editTextNumber20"/>

    <EditText
        android:id="@+id/editTextNumber20"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/Visina_C"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:textColor="@drawable/edtextcolor"
        android:textColorHint="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber19"
        app:layout_constraintBottom_toTopOf="@id/button2"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color4"
        android:text="@string/Izracunaj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber20"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>